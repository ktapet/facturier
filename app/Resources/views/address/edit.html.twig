{% extends 'base.html.twig' %}
{% block submenu %}
<ul class="nav nav-sidebar">
    <li><a href="{{ path('address_new') }}">Add new</a></li>
    <li><a href="{{ path('address_index') }}">List</a></li>
</ul>
{% endblock %}

{% block body %}
    <h1>Address edit</h1>

    {{ form_start(edit_form, { 'attr': { 'role':'form', 'class':'form-horizontal' } }) }}

    <div class="form-group">
        {{ form_label(edit_form.alias, 'Alias', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(edit_form.alias, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(edit_form.alias) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.street, 'Street', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(edit_form.street, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(edit_form.street) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.no, 'Number street', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(edit_form.no, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(edit_form.no) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.city, 'City', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(edit_form.city, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(edit_form.city) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.country, 'Country', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(edit_form.country, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(edit_form.country) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.email, 'Email', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(edit_form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(edit_form.email) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.phone, 'Phone', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(edit_form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(edit_form.phone) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.partner, 'Partner', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(edit_form.partner, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(edit_form.partner) }}
    </div>
    <div class="form-group">
        <div class="col-md-3 col-md-offset-1 col-sm-4 col-sm-offset-2">
            {{ form_widget(edit_form.submit, { 'label': 'Save', 'attr': {'class': 'btn btn-sm btn-success'}}) }}
        </div>
    </div>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">

        <div class="col-md-3 col-md-offset-1 col-sm-4 col-sm-offset-2">
            {{ form_widget(delete_form.submit, { 'label': 'Delete', 'attr': {'class': 'btn btn-sm btn-danger'}}) }}
        </div>

    </div>
    {{ form_end(delete_form) }}
{% endblock %}
