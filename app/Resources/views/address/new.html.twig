{% extends 'base.html.twig' %}
{% block submenu %}
<ul class="nav nav-sidebar">
    <li><a href="{{ path('address_new') }}">Add new</a></li>
    <li><a href="{{ path('address_index') }}">List</a></li>
</ul>
{% endblock %}

{% block body %}
    <h1>Address creation</h1>

    {{ form_start(form, { 'attr': { 'role':'form', 'class':'form-horizontal' } }) }}

    <div class="form-group">
        {{ form_label(form.alias, 'Alias', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(form.alias, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.alias) }}
    </div>
    <div class="form-group">
        {{ form_label(form.street, 'Street', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(form.street, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.street) }}
    </div>
    <div class="form-group">
        {{ form_label(form.no, 'Number street', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(form.no, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.no) }}
    </div>
    <div class="form-group">
        {{ form_label(form.city, 'City', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.city) }}
    </div>
    <div class="form-group">
        {{ form_label(form.country, 'Country', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.country) }}
    </div>
    <div class="form-group">
        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.email) }}
    </div>
    <div class="form-group">
        {{ form_label(form.phone, 'Phone', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.phone) }}
    </div>
    <div class="form-group">
        {{ form_label(form.partner, 'Partner', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(form.partner, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.partner) }}
    </div>
    <div class="form-group">
        <div class="col-md-3 col-md-offset-1 col-sm-4 col-sm-offset-2">
            {{ form_widget(form.submit, { 'label': 'Create a new entry',
                'attr': {'class': 'btn btn-sm btn-success'}})}}
        </div>
    </div>


    {{ form_end(form) }}


{% endblock %}
