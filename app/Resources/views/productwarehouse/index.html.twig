{% extends 'productimage/productimage_layout.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{  parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('productwarehouse_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('productwarehouse_index') }}">{% trans %}List{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>ProductWarehouse list</h1>

<div class="table-responsive">
    <table class="table table-hover records_list">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Product{% endtrans %}</th>
                <th>{% trans %}Warehouse{% endtrans %}</th>
                <th>{% trans %}Quantity{% endtrans %}</th>
                <th>{% trans %}Datcre{% endtrans %}</th>
                <th>{% trans %}Datupd{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for productWarehouse in productWarehouses %}
            <tr>
                <td><a href="{{ path('productwarehouse_show', { 'id': productWarehouse.id }) }}">{{ productWarehouse.id }}</a></td>
                <td>
                    {{ productWarehouse.product }}
                </td>
                <td>
                    {{ productWarehouse.warehouse }}
                </td>
                <td>{{ productWarehouse.quantity }}</td>
                <td>{% if productWarehouse.datCre %}{{ productWarehouse.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if productWarehouse.datUpd %}{{ productWarehouse.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a class="btn btn-sm btn-info" href="{{ path('productwarehouse_show', { 'id': productWarehouse.id }) }}">
                        <span class="glyphicon glyphicon-share"></span> Show
                    </a>

                    <a class="btn btn-sm btn-default" href="{{ path('productwarehouse_edit', { 'id': productWarehouse.id }) }}">
                        <span class="glyphicon glyphicon-edit"></span> Edit
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
