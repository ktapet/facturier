{% extends 'document/document_layout.html.twig' %}
{% form_theme delete_form ':Form:fields.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('doctype_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('doctype_index') }}">{% trans %}List{% endtrans %}</a></li>
        <li><a href="{{ path('doctype_edit', {'id':docType.id}) }}">{% trans %}Edit{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>DocType</h1>

<div class="col-lg-4">
    <div class="table-responsive">
        <table class="table table-bordered table-hover record_properties">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ docType.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ docType.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}Direction{% endtrans %}</th>
                <td>{{ docType.direction }}</td>
            </tr>
            <tr>
                <th>{% trans %}Datcre{% endtrans %}</th>
                <td>{% if docType.datCre %}{{ docType.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{% trans %}Datupd{% endtrans %}</th>
                <td>{% if docType.datUpd %}{{ docType.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
</div>

        {{ form_start(delete_form, {'attr': {'role':'form', 'class':'form-horizontal'}}) }}

            {{ form_widget(delete_form) }}

        {{ form_end(delete_form) }}
        

        

{% endblock %}
