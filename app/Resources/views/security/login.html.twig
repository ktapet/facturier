{% extends "base.html.twig" %}


{# app/Resources/views/security/login.html.twig #}
{# ... you will probably extends your base template, like base.html.twig #}
{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

    {{ form_start(form, {'attr': {'role':'form', 'class': 'form-horizontal'}}) }}
    <div class="form-group">
        {{ form_label(form.username, 'Userame', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.username) }}
    </div>
    <div class="form-group">
        {{ form_label(form.password, 'Password', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.password) }}
    </div>
    <div class="form-group">
        <div class="col-md-3 col-md-offset-1 col-sm-4 col-sm-offset-2">
            {{ form_widget(form.submit, { 'label': 'Login',
                'attr': {'class': 'btn btn-sm btn-success'}})}}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}