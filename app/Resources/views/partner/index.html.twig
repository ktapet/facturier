{% extends 'base.html.twig' %}

{% block body %}
    <h1>Partner list</h1>

        <div class="table-responsive">
            <table class="table table-hover records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Bank</th>
                <th>Iban</th>
                <th>Datcre</th>
                <th>Datupd</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td><a href="{{ path('partner_show', { 'id': partner.id }) }}">{{ partner.id }}</a></td>
                <td>{{ partner.name }}</td>
                <td>{{ partner.bank }}</td>
                <td>{{ partner.iban }}</td>
                <td>{% if partner.datCre %}{{ partner.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if partner.datUpd %}{{ partner.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-sm btn-info" href="{{ path('partner_show', { 'id': partner.id }) }}">
                                <span class="glyphicon glyphicon-share"></span> show</a>
                        </li>
                        <li>
                            <a class="btn btn-sm btn-warning" href="{{ path('partner_edit', { 'id': partner.id }) }}">
                                <span class="glyphicon glyphicon-edit"></span> edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>

            <a class="btn btn-sm btn-success" href="{{ path('partner_new') }}">
                <span class="glyphicon glyphicon-plus-sign"></span>Create a new entry</a>

            
{% endblock %}