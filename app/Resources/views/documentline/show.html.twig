{% extends 'base.html.twig' %}
{% form_theme delete_form ':Form:fields.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('documentline_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('documentline_index') }}">{% trans %}List{% endtrans %}</a></li>
        <li><a href="{{ path('documentline_edit', {'id':documentLine.id}) }}">{% trans %}Edit{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>DocumentLine</h1>

<div class="col-lg-4">
    <div class="table-responsive">
        <table class="table table-bordered table-hover record_properties">
            <tbody>
                <tr>
                    <th>{% trans %}Id{% endtrans %}</th>
                    <td>{{ documentLine.id }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Quantity{% endtrans %}</th>
                    <td>{{ documentLine.quantity }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Saleprice{% endtrans %}</th>
                    <td>{{ documentLine.salePrice }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Datcre{% endtrans %}</th>
                    <td>{% if documentLine.datCre %}{{ documentLine.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>{% trans %}Datupd{% endtrans %}</th>
                    <td>{% if documentLine.datUpd %}{{ documentLine.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
    </div>

            {{ form_start(delete_form, {'attr': {'role':'form', 'class':'form-horizontal'}}) }}
                {{ form_widget(delete_form) }}
            {{ form_end(delete_form) }}

</div>
{% endblock %}
