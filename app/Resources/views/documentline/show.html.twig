{% extends 'base.html.twig' %}

{% block body %}
    <h1>DocumentLine</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ documentLine.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ documentLine.quantity }}</td>
            </tr>
            <tr>
                <th>Saleprice</th>
                <td>{{ documentLine.salePrice }}</td>
            </tr>
            <tr>
                <th>Datcre</th>
                <td>{% if documentLine.datCre %}{{ documentLine.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datupd</th>
                <td>{% if documentLine.datUpd %}{{ documentLine.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('documentline_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('documentline_edit', { 'id': documentLine.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
