{% block body %}
    <h1>VatRate</h1>
<div class="col-lg-4">
    <div class="table-responsive">   
        <table class="table table-bordered table-hover record_properties">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ vatRate.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Code{% endtrans %}</th>
                <td>{{ vatRate.code }}</td>
            </tr>
            <tr>
                <th>{% trans %}Description{% endtrans %}</th>
                <td>{{ vatRate.description }}</td>
            </tr>
            <tr>
                <th>{% trans %}Rate{% endtrans %}</th>
                <td>{{ vatRate.rate }}</td>
            </tr>
            <tr>
                <th>{% trans %}Datcre{% endtrans %}</th>
                <td>{% if vatRate.datCre %}{{ vatRate.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{% trans %}Datupd{% endtrans %}</th>
                <td>{% if vatRate.datUpd %}{{ vatRate.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
</div>

